{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run C++",
            "type": "shell",
            "command": "g++ -std=c++17 -o ${fileBasenameNoExtension} '${file}' && ./${fileBasenameNoExtension} < .miscellaneous/input.txt > .miscellaneous/output.txt && rm ${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": "**/*.cpp"
            }
        },
        {
            "label": "Compile and Run Java",
            "type": "shell",
            "command": "cp '${file}' '${workspaceFolder}/${fileBasenameNoExtension}.java' && javac '${workspaceFolder}/${fileBasenameNoExtension}.java' && java ${fileBasenameNoExtension} < .miscellaneous/input.txt > .miscellaneous/output.txt && rm '${workspaceFolder}/${fileBasenameNoExtension}.java' && rm '${workspaceFolder}/${fileBasenameNoExtension}.class'",
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": "**/*.java"
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*\\.java):(\\d+):\\s+(error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Remove C++ Executable",
            "type": "shell",
            "command": "rm -r '${fileDirname}/${fileBasenameNoExtension}.dSYM' && rm '${fileDirname}/${fileBasenameNoExtension}'",
        },
        {
            "type": "shell",
            "label": "Java: build active file",
            "command": "cp '${file}' '${workspaceFolder}/${fileBasenameNoExtension}.java' && javac '${workspaceFolder}/${fileBasenameNoExtension}.java'",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Remove Java Class",
            "type": "shell",
            "command": "rm '${workspaceFolder}/${fileBasenameNoExtension}.java' && rm '${workspaceFolder}/${fileBasenameNoExtension}.class'",
        }
    ]
}